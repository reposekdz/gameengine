# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=tera_engine
DB_USER=tera_user
DB_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
API_KEY=your_secure_api_key_here_min_32_chars

# TERA Engine Settings
TERA_IQ=3000000000
TERA_ACCURACY=255.55
TERA_WORKERS=8
TERA_MODE=production

# GPU Configuration
CUDA_VISIBLE_DEVICES=0,1,2,3
GPU_MEMORY_FRACTION=0.9
USE_GPU=true
MIXED_PRECISION=true

# Storage Configuration
ASSET_DIRECTORY=./assets
CACHE_DIRECTORY=./cache
UPLOAD_DIRECTORY=./uploads
LOG_DIRECTORY=./logs
MAX_CACHE_SIZE_GB=100
MAX_UPLOAD_SIZE_MB=500

# Model Configuration
MODEL_PATH=./models
DOWNLOAD_MODELS=false
USE_PRETRAINED=true

# Performance Configuration
MAX_WORKERS=16
BATCH_SIZE=64
PARALLEL_GENERATIONS=8
INFERENCE_MODE=fast

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=INFO

# Security
CORS_ORIGINS=*
RATE_LIMIT=1000
MAX_REQUESTS_PER_MINUTE=1000

# Features
ENABLE_TEXT_TO_3D=true
ENABLE_IMAGE_TO_3D=true
ENABLE_3D_TO_GAME=true
ENABLE_UNIVERSE_GEN=true
ENABLE_GAME_GEN=true
